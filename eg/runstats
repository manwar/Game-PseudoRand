#!/usr/bin/env perl
#
# how long are consecutive runs of values? with r-fu
#
#   https://github.com/thrig/r-fu/
#
# one can compare e.g.
#
#   ./trial | ./runstats | r-fu table
#   perl -E 'say rand()>0.5 ? 1:0 for 1..1e6' | ./runstats | r-fu table

use 5.10.0;
use warnings;

my $prev = readline;
chomp $prev;
my $len = 1;
while ( my $value = readline ) {
    chomp $value;
    if ( $value != $prev ) {
        say $len;
        $len = 1;
        next;
    }
    $len++;
}
